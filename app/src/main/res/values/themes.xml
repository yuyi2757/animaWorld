<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme.    -->
    <style name="Theme.AnimaWorld" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.AnimaWorld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AnimaWorld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AnimaWorld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--        <item name="windowNoTitle">true</item>-->
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowNoTitle">true</item>//无标题 设置为true才会消失
        <item name="android:windowActionBar">false</item>//无ActionBar(我日他娘的，之前设设置为false好好的，突然又出来了,反复改两次值又他妈好好，操蛋)
        <item name="android:windowFullscreen">false</item>//全屏即无通知栏 需要显示顶部状态栏，设置为fasle
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/nu</item>//我自己加的，设置状态栏透明，顶部手机的运营商，信号格子都显示出来
        <item name="colorPrimary">@color/teal_700</item>
    </style>
    <!--     <item name="android:windowBackground">@mipmap/index_bg</item>  不能设置全局的背景-->
</resources>